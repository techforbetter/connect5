{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "jest": {
    "testRegex": "__test__/*",
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/__snapshots__/**",
      "!**/client/**",
      "!**/server/app.js",
      "!**/coverage/**"
    ]
  },
  "scripts": {
    "start": "node ./v2/server/index.js",
    "server": "nodemon ./v2/server/index.js",
    "client": "npm start --prefix v2/client",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit --runInBand",
    "test:coverage": "NODE_ENV=test  jest --coverage --detectOpenHandles --forceExit --runInBand",
    "test:client": "cd v2/client && npm test",
    "test:client:coverage": "cd v2/client && npm run test:coverage",
    "client:init": "cd v2/client && npm i",
    "client:dev": "cd v2/client && npm start",
    "heroku-postbuild": "npm run client:init && npm run client:build",
    "client:build": "cd v2/client && npm run build",
    "coverage": "codecov",
    "surveybuild": "node server/database/surveyBuild.js",
    "dummybuild": "node server/database/dummy_data_build.js",
    "lint": "eslint ."
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "boom": "^7.3.0",
    "codecov": "^3.1.0",
    "concurrently": "^4.0.1",
    "cookie-parser": "~1.4.3",
    "dotenv": "^8.0.0",
    "express": "~4.16.0",
    "joi": "^14.3.0",
    "jsonwebtoken": "^8.4.0",
    "moment": "^2.22.2",
    "mongoose": "^5.3.12",
    "morgan": "~1.9.0",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "eslint": "5.16.0",
    "babel-eslint": "10.0.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "prettier": "^1.17.0",
    "istanbul": "^0.4.5",
    "jest": "24.7.1",
    "nodemon": "^1.18.6",
    "supertest": "^3.3.0"
  }
}
